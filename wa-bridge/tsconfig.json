{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "lib": ["es2021"],
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
